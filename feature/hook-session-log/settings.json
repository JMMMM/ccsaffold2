{
  "hooks": {
    "UserPromptSubmit": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录用户提示"
    }],
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录工具使用前"
    }],
    "PostToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录工具使用后"
    }],
    "Notification": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录通知事件"
    }],
    "Stop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录停止事件"
    }],
    "SessionEnd": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node .claude/hooks/session-log.js"
      }],
      "description": "Session log: 记录会话结束"
    }]
  }
}
